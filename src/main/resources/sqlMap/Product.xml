<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.dao.ProductMapper">

    <select id="product" resultType="Product">
        select * from product
    </select>

    <insert id="addProduct" keyProperty="product_seq">
        insert into product(name,price,count) values (#{name},#{price},#{count})
    </insert>

    <select id="findByProductSeq" parameterType="int" resultType="Product">
        select * from product where product_seq = #{product_seq};
    </select>

    <update id="productUpdate" parameterType="com.test.domain.dto.ProductUpdate">
        update product
        set name = #{name},
        price = #{price},
        count = #{count}
        where product_seq = #{product_seq}
    </update>

    <delete id="productDelete" parameterType="int">
        Delete from product where product_seq = #{product_seq};
    </delete>
</mapper>